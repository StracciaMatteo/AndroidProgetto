<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerProva"
        android:layout_width="399dp"
        android:layout_height="203dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="375dp"
        android:layout_height="182dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="238dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/frittura" />

        <TextView
            android:id="@+id/textPV"
            android:layout_width="125dp"
            android:layout_height="52dp"
            android:text=" Prezzo vecchio"
            android:translationX="245dp"
            android:translationY="67dp" />

        <TextView
            android:id="@+id/textPN"
            android:layout_width="125dp"
            android:layout_height="52dp"
            android:text=" Prezzo nuovo"
            android:translationX="245dp"
            android:translationY="119dp" />

        <TextView
            android:id="@+id/textNP"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:text=" Nome Prodotto"
            android:translationX="245dp"
            android:translationY="12dp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
