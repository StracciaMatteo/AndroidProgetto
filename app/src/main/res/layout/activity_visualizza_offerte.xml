<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".visualizza_offerte">

<androidx.appcompat.widget.Toolbar
android:id="@+id/toolbarmenu"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/purple_700"
android:minHeight="?attr/actionBarSize"
android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
app:logo="@drawable/logo"
app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
app:navigationIcon="?homeAsUpIndicator"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/utente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.739"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022"
            app:srcCompat="@drawable/user" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="375dp"
            android:layout_height="182dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.094">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="238dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/frittura" />

            <TextView
                android:id="@+id/textPV"
                android:layout_width="125dp"
                android:layout_height="52dp"
                android:text=" Prezzo vecchio"
                android:translationX="245dp"
                android:translationY="67dp" />

            <TextView
                android:id="@+id/textPN"
                android:layout_width="125dp"
                android:layout_height="52dp"
                android:text=" Prezzo nuovo"
                android:translationX="245dp"
                android:translationY="119dp" />

            <TextView
                android:id="@+id/textNP"
                android:layout_width="125dp"
                android:layout_height="55dp"
                android:text=" Nome Prodotto"
                android:translationX="245dp"
                android:translationY="12dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="261dp"
            android:layout_height="33dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="9dp"
            android:fontFamily="sans-serif-medium"
            android:text="Offerte"
            android:textColor="#4E4C4C"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:id="@+id/divider"
            android:layout_width="375dp"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="19dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
